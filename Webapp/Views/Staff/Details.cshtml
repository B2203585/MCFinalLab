@model Webapp.Models.Staff

@{
    ViewData["Title"] = "Staff Details";
}

<h1>@Model.Name's Details</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card" data-testid="staff-details-card">
            <div class="text-center mt-3">
                <img src="@Model.PhotoUrl" alt="@Model.Name" class="img-fluid rounded" style="max-height: 300px;" data-testid="staff-photo">
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item" data-testid="staff-id-display"><strong>Staff ID:</strong> @Model.Id</li>
                    <li class="list-group-item" data-testid="staff-name-display"><strong>Name:</strong> @Model.Name</li>
                    <li class="list-group-item" data-testid="staff-email-display"><strong>Email:</strong> @Model.Email</li>
                    <li class="list-group-item" data-testid="staff-phone-display"><strong>Phone:</strong> @Model.Phone</li>
                    <li class="list-group-item" data-testid="staff-startdate-display"><strong>Start Date:</strong> @Model.StartingDate.ToShortDateString()</li>
                </ul>
            </div>
            <div class="card-footer">
                <a href="/" class="btn btn-secondary" data-testid="back-to-list-button">Back to List</a>
            </div>
        </div>
    </div>
</div>
